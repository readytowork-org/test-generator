{
  "manifest_version": 3,
  "name": "Test Generator",
  "version": "1.0",
  "description": "Records DOM events (click, dblclick, change, select).",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "Open Test Generator"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ]
}
